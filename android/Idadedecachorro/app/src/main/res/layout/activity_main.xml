<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telaPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AzulClaro"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imgCachorroId"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        app:layout_constrainedWidth="false"
        app:layout_constraintBottom_toTopOf="@+id/txtInfoId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cachorro" />

    <Button
        android:id="@+id/btnIdadeId"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/descobrir_idade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResultadoId"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txtIdadeId"
        android:layout_width="168dp"
        android:layout_height="62dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="@dimen/idade_cachorro"
        app:layout_constraintBottom_toTopOf="@+id/txtResultadoId"
        app:layout_constraintEnd_toEndOf="@+id/txtInfoId"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInfoId" />

    <TextView
        android:id="@+id/txtInfoId"
        android:layout_width="0dp"
        android:layout_height="91dp"
        android:layout_marginBottom="97dp"
        android:layout_marginTop="165dp"
        android:background="@color/AzulMaisClaro"
        android:padding="@dimen/padding_info"
        android:text="@string/info_idade"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/tamanho_info"
        app:layout_constraintBottom_toTopOf="@+id/txtResultadoId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtResultadoId"
        android:layout_width="353dp"
        android:layout_height="89dp"
        android:layout_marginBottom="109dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textAlignment="center"
        android:textSize="@dimen/tamanho_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInfoId" />

</android.support.constraint.ConstraintLayout>